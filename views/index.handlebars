<div id="Header">
  <center><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/80/Five_Guys_logo.svg/2000px-Five_Guys_logo.svg.png"height="150" width="70%"></center>
  <center><h1>Hamburger Helper</h1></center>
<center>The app that helps you eat and vomit Five Guy's Burgers</center><br>
</div>

<div id="full">
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Add Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <input type="radio" name="devoured" value="0" checked> Hot and Fresh!<br>
    <input type="radio" name="devoured" value="1"> Eaten
  </div>

  <button type="submit">Submit</button>
</form>
</div>

<div id="fresh">
<center><h2>Hot and Fresh Burgers</h2></center>

<ul style="list-style-type:none">
  {{#each burgers}}
    {{#unless this.devoured}}
      <li id="freshli">
      &nbsp; 
      {{this.id}}.&nbsp; 
        {{this.burger_name}}
         

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour</button>
        </form>

    
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div id="eaten">
<center><h2>Eaten Burgers</h2></center>

<ul style="list-style-type:none">
  {{#each burgers}}
    {{#if this.devoured}}
      <li id="eatenli">
      &nbsp; 
       {{this.id}}.&nbsp; 
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Vomit?</button>
        </form>


      </li>
    {{/if}}
  {{/each}}
</ul>
</div>